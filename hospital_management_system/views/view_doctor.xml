<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="doctor">
                <sheet>
                    <group>
                        <field name="doctor_name"/>
                        <field name="role"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="address"/>
                        <field name="patient_names" widget="many2many_tags"/>
                                                    #If we not add widget it shows total list of the hospital.patient comodel
                                                    #If we add Widget we can select one by one needed only those patient_names
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_list" model="ir.ui.view">
        <field name="name">doctor</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="doctor">
                <field name="doctor_name"/>
                <field name="role"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_doctor_list"/>
    </record>
</odoo>